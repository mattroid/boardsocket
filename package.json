{
  "name": "boardsocket",
  "version": "1.0.0",
  "description": "An isomorphic boardgame, using sockets",
  "main": "index.js",
  "scripts": {
    "start": "babel-node --presets es2015 -- src/server",
    "test": "standard && mocha --require babel-core/register src/**/test.js",
    "watch:test": "watch 'npm test' src/",
    "watch": "parallelshell 'npm run watch:test' 'npm start'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notnullgames/boardsocket.git"
  },
  "keywords": [
    "socket",
    "board",
    "game"
  ],
  "author": "David <konsumer@jetboystudio.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/notnullgames/boardsocket/issues"
  },
  "homepage": "https://github.com/notnullgames/boardsocket#readme",
  "dependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify-css": "^0.8.3",
    "browserify-middleware": "^7.0.0",
    "express": "^4.13.3",
    "fingerprintjs2": "^1.0.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "socket.io": "^1.3.7"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "parallelshell": "^2.0.0",
    "standard": "^5.4.1",
    "watch": "^0.17.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ],
      [
        "browserify-css",
        {
          "autoInject": true
        }
      ]
    ]
  },
  "babel": {
    "presets": [ "react", "es2015" ]
  }
}
